# OSC-FinOps Production Environment Variables
# Copy this file to .env and update with your production values

# ============================================================================
# REQUIRED: Security Configuration
# ============================================================================
# Generate a secure secret key: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================================================
# Application Configuration
# ============================================================================
FLASK_ENV=production
FLASK_DEBUG=0

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ============================================================================
# Database Configuration
# ============================================================================
# For SQLite (default):
DATABASE_URL=sqlite:///osc_finops.db

# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/osc_finops
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10
# DATABASE_ECHO=0

# ============================================================================
# Session Configuration
# ============================================================================
SESSION_TIMEOUT=1800
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins (use * for development only)
# Example: CORS_ORIGINS=https://app.example.com,https://admin.example.com
CORS_ORIGINS=*

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
ERROR_LOG_FILE=errors.log
APP_LOG_FILE=app.log
API_CALLS_LOG_FILE=api_calls.log

# Disable API call logging in production (set to 0)
ENABLE_API_CALL_LOGGING=0

# ============================================================================
# Cache Configuration
# ============================================================================
CATALOG_CACHE_TTL=86400
CONSUMPTION_CACHE_TTL=3600

# ============================================================================
# Gunicorn Configuration (for production WSGI server)
# ============================================================================
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
BIND_ADDRESS=0.0.0.0:8000

# ============================================================================
# Security Notes
# ============================================================================
# 1. NEVER commit this file with real credentials
# 2. Use a strong SECRET_KEY (generate with: python3 -c "import secrets; print(secrets.token_hex(32))")
# 3. Set CORS_ORIGINS to specific domains in production (not *)
# 4. Use PostgreSQL for production (not SQLite)
# 5. Enable HTTPS and set SESSION_COOKIE_SECURE=true
# 6. Review and adjust all timeout and cache values for your use case
